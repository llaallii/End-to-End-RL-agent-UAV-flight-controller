    Armed --> Idle : disarm_command
    Armed --> Failsafe : critical_error
    
    Stabilize --> Autonomous : mission_start
    Stabilize --> Armed : land_complete
    Stabilize --> Failsafe : sensor_loss
    
    Autonomous --> Stabilize : mission_complete
    Autonomous --> Failsafe : critical_error
    
    Failsafe --> Armed : error_cleared
    Failsafe --> [*] : emergency_shutdown
    
    Error --> Idle : error_reset
    Error --> [*] : fatal_error
    
